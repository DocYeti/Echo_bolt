---
import '@fontsource/inter';
import '@fontsource/playfair-display';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Sustainable home solutions for the Pacific Northwest" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-background font-inter">
		<nav class="fixed w-full bg-background/90 backdrop-blur-sm z-50">
			<div class="container mx-auto px-4 py-4">
				<div class="flex justify-between items-center">
					<a href="/" class="font-playfair text-2xl text-accent">Eco Home Seasons</a>
					<div class="space-x-6">
						<a href="/articles" class="text-accent hover:text-primary transition-colors">Articles</a>
						<a href="/products" class="text-accent hover:text-primary transition-colors">Products</a>
						<a href="/about" class="text-accent hover:text-primary transition-colors">About</a>
						<a href="/contact" class="text-accent hover:text-primary transition-colors">Contact</a>
					</div>
				</div>
			</div>
		</nav>
		<slot />
		<footer class="bg-accent text-background mt-20">
			<div class="container mx-auto px-4 py-12">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="font-playfair text-xl mb-4">Eco Home Seasons</h3>
						<p class="text-sm">Empowering sustainable living in the Pacific Northwest</p>
					</div>
					<div>
						<h4 class="font-playfair text-lg mb-4">Quick Links</h4>
						<ul class="space-y-2">
							<li><a href="/articles" class="hover:text-primary transition-colors">Articles</a></li>
							<li><a href="/products" class="hover:text-primary transition-colors">Products</a></li>
							<li><a href="/about" class="hover:text-primary transition-colors">About</a></li>
							<li><a href="/contact" class="hover:text-primary transition-colors">Contact</a></li>
						</ul>
					</div>
					<div>
						<h4 class="font-playfair text-lg mb-4">Connect With Us</h4>
						<div class="flex space-x-4">
							<a href="#" class="hover:text-primary transition-colors">Twitter</a>
							<a href="#" class="hover:text-primary transition-colors">Instagram</a>
							<a href="#" class="hover:text-primary transition-colors">Facebook</a>
						</div>
					</div>
				</div>
				<div class="border-t border-background/20 mt-8 pt-8 text-center text-sm">
					<p>&copy; {new Date().getFullYear()} Eco Home Seasons. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>